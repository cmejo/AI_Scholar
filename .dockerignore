# Docker ignore file for AI Scholar
# Excludes unnecessary files from Docker build context

# Data directories (contain runtime data, not needed for build)
data/
data/*
data/postgres/
data/redis/
data/chroma/
data/ollama/
data/elasticsearch/
data/prometheus/
data/grafana/

# Log directories
logs/
logs/*

# Upload directories
uploads/
uploads/*

# Backup directories
backups/
backups/*

# SSL certificates
ssl/
ssl/*

# Config directories (runtime configs)
config/
config/*

# Monitoring configs (runtime)
monitoring/
monitoring/*

# Node modules (will be installed in container)
node_modules/
node_modules/*

# Build outputs
dist/
build/
.next/
out/

# Development files
.git/
.gitignore
.env.local
.env.development
.env.test
*.log
*.pid
*.seed
*.pid.lock

# IDE files
.vscode/
.idea/
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

# Test coverage
coverage/
.nyc_output/

# Temporary files
tmp/
temp/
*.tmp
*.temp

# Documentation (not needed in containers)
docs/
*.md
README*
CHANGELOG*
LICENSE*

# Docker files (not needed in build context)
docker-compose*.yml
Dockerfile*
.dockerignore

# Python cache
__pycache__/
*.pyc
*.pyo
*.pyd
.Python
pip-log.txt
pip-delete-this-directory.txt

# Virtual environments
venv/
env/
ENV/

# Package manager files (will be copied separately)
package-lock.json
yarn.lock
pnpm-lock.yaml
