{
  "name": "AI Scholar Advanced RAG",
  "short_name": "AI Scholar",
  "description": "Advanced Research Assistant with AI-powered document analysis and knowledge discovery",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1976d2",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  
