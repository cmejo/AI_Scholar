# AI Scholar Production Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DOMAIN AND SSL CONFIGURATION
# =============================================================================
DOMAIN_NAME=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=ai_scholar_db
POSTGRES_USER=ai_scholar_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# =============================================================================
# APPLICATION SECRETS (GENERATE STRONG RANDOM KEYS!)
# =============================================================================
SECRET_KEY=your_super_secret_key_here_make_it_long_and_random_64_chars_min
JWT_SECRET=your_jwt_secret_key_here_also_make_it_random_64_chars_minimum

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# SERVICE PORTS
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3005
CHROMA_PORT=8080
OLLAMA_PORT=11434
ELASTICSEARCH_PORT=9200
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URLs
VITE_API_URL=https://yourdomain.com/api
VITE_WS_URL=wss://yourdomain.com/ws

# =============================================================================
# FILE STORAGE AND LIMITS
# =============================================================================
MAX_FILE_SIZE_MB=100
DATA_PATH=./data

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
# Additional models to pull (comma-separated)
OLLAMA_ADDITIONAL_MODELS=llama2:7b,phi:latest

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# AWS S3 Backup (optional)
S3_BACKUP_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Docker resource limits are set in docker-compose.prod.yml
# Adjust based on your server specifications

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting and security headers are configured in nginx
# SSL certificates will be managed by Let's Encrypt

# =============================================================================
# DEVELOPMENT OVERRIDES (set to false for production)
# =============================================================================
DEBUG=False
ENABLE_DEV_TOOLS=False
AUTO_RELOAD=False
LOG_SQL_QUERIES=False
DETAILED_ERROR_MESSAGES=False
