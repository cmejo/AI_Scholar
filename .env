# AI Scholar Production Environment Configuration
# Customized for scholar.cmejo.com

# =============================================================================
# DOMAIN AND SSL CONFIGURATION
# =============================================================================
DOMAIN_NAME=scholar.cmejo.com
SSL_EMAIL=admin@cmejo.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=ai_scholar_db
POSTGRES_USER=ai_scholar_user
POSTGRES_PASSWORD=AiScholar2024!SecureDB#Pass
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=AiScholar2024!SecureRedis#Cache
REDIS_PORT=6379

# =============================================================================
# APPLICATION SECRETS (GENERATED SECURE KEYS)
# =============================================================================
SECRET_KEY=AiScholar2024!SuperSecretKey#ForProduction$WithExtraLength&Security*Features
JWT_SECRET=AiScholar2024!JWT#SecretKey$ForTokens&Authentication*WithExtraLength

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# SERVICE PORTS
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3005
CHROMA_PORT=8080
OLLAMA_PORT=11434
ELASTICSEARCH_PORT=9200
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=https://scholar.cmejo.com,https://www.scholar.cmejo.com

# Frontend URLs
VITE_API_URL=https://scholar.cmejo.com/api
VITE_WS_URL=wss://scholar.cmejo.com/ws

# =============================================================================
# FILE STORAGE AND LIMITS
# =============================================================================
MAX_FILE_SIZE_MB=100
DATA_PATH=./data

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
# Additional models to pull (comma-separated)
OLLAMA_ADDITIONAL_MODELS=llama2:7b,phi:latest,codellama:7b

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# AWS S3 Backup (optional - configure if you want cloud backups)
S3_BACKUP_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# MONITORING CONFIGURATION (ENABLED)
# =============================================================================
GRAFANA_PASSWORD=AiScholar2024!Grafana#Monitor

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Docker resource limits are set in docker-compose.prod.yml
# Optimized for monitoring-enabled deployment

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting and security headers are configured in nginx
# SSL certificates will be managed by Let's Encrypt

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
DEBUG=False
ENABLE_DEV_TOOLS=False
AUTO_RELOAD=False
LOG_SQL_QUERIES=False
DETAILED_ERROR_MESSAGES=False
ENABLE_MONITORING=True
PROMETHEUS_METRICS_ENABLED=True
