# AI Scholar Advanced RAG - Deployment Configuration
# Copy this file to .env.production and configure for your environment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# Application
SECRET_KEY=your-super-secret-key-here
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://rag_user:${POSTGRES_PASSWORD}@postgres:5432/advanced_rag_db

# Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Vector Database
VECTOR_DB_URL=http://chromadb:8000

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Hugging Face
HUGGINGFACE_API_KEY=your-huggingface-api-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=ai-scholar/advanced-rag
IMAGE_TAG=latest

# Blue-Green Deployment
DEPLOYMENT_STRATEGY=blue-green
HEALTH_CHECK_TIMEOUT=300
HEALTH_CHECK_INTERVAL=10

# =============================================================================
# MOBILE APP DEPLOYMENT
# =============================================================================

# PWA Configuration
PWA_S3_BUCKET_PROD=your-pwa-production-bucket
PWA_S3_BUCKET_STAGING=your-pwa-staging-bucket
CLOUDFRONT_DISTRIBUTION_ID_PROD=your-cloudfront-prod-id
CLOUDFRONT_DISTRIBUTION_ID_STAGING=your-cloudfront-staging-id

# Mobile App Store
GOOGLE_PLAY_SERVICE_ACCOUNT=your-google-play-service-account-json
APPLE_ID_USERNAME=your-apple-id-username
APPLE_ID_PASSWORD=your-apple-id-app-specific-password

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# S3 Backup
S3_BACKUP_BUCKET=your-backup-bucket
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana
GRAFANA_PASSWORD=your-grafana-admin-password

# Prometheus
PROMETHEUS_RETENTION_TIME=200h

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email
EMAIL_NOTIFICATION=admin@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=notifications@yourdomain.com
SMTP_PASSWORD=your-smtp-password

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate paths (if using custom certificates)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Let's Encrypt (if using automatic SSL)
LETSENCRYPT_EMAIL=admin@yourdomain.com
LETSENCRYPT_DOMAINS=yourdomain.com,www.yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=63072000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Application
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Database
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Mobile Features
MOBILE_APP_ENABLED=true
PWA_ENABLED=true
OFFLINE_MODE_ENABLED=true

# Voice Features
VOICE_INTERFACE_ENABLED=true
MULTILINGUAL_VOICE_ENABLED=true

# External Integrations
REFERENCE_MANAGER_INTEGRATION_ENABLED=true
NOTE_TAKING_INTEGRATION_ENABLED=true
ACADEMIC_DATABASE_INTEGRATION_ENABLED=true

# Educational Features
QUIZ_GENERATION_ENABLED=true
SPACED_REPETITION_ENABLED=true
GAMIFICATION_ENABLED=true

# Enterprise Features
INSTITUTIONAL_COMPLIANCE_ENABLED=true
RESOURCE_OPTIMIZATION_ENABLED=true
ROLE_BASED_ACCESS_ENABLED=true

# Interactive Content
JUPYTER_NOTEBOOK_ENABLED=true
INTERACTIVE_VISUALIZATION_ENABLED=true
SECURE_CODE_EXECUTION_ENABLED=true

# Opportunity Matching
FUNDING_MATCHER_ENABLED=true
PUBLICATION_VENUE_MATCHER_ENABLED=true

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Testing
RUN_TESTS_ON_DEPLOY=true
SMOKE_TESTS_ENABLED=true
PERFORMANCE_TESTS_ENABLED=false

# Development
DEVELOPMENT_MODE=false
HOT_RELOAD_ENABLED=false
DEBUG_TOOLBAR_ENABLED=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
AUTOMATED_BACKUPS_ENABLED=true
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_COMPRESSION_ENABLED=true

# Recovery
POINT_IN_TIME_RECOVERY_ENABLED=true
BACKUP_VERIFICATION_ENABLED=true

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================

# Auto-scaling
AUTO_SCALING_ENABLED=false
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Load Balancing
LOAD_BALANCER_TYPE=nginx
STICKY_SESSIONS_ENABLED=false
HEALTH_CHECK_PATH=/health

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
APP_LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING
NGINX_LOG_LEVEL=ERROR

# Log Retention
LOG_RETENTION_DAYS=30
LOG_ROTATION_SIZE=100M
LOG_COMPRESSION_ENABLED=true

# Centralized Logging
CENTRALIZED_LOGGING_ENABLED=true
LOG_AGGREGATION_ENDPOINT=https://logs.yourdomain.com

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_FEATURE_ENABLED=true
# CUSTOM_API_ENDPOINT=https://api.custom-service.com
# CUSTOM_SECRET_KEY=your-custom-secret