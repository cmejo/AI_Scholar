# Development Environment Configuration for Zotero Integration
# This file contains development-specific environment variables

# Application Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_scholar_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Zotero API Configuration
ZOTERO_CLIENT_ID=${DEV_ZOTERO_CLIENT_ID}
ZOTERO_CLIENT_SECRET=${DEV_ZOTERO_CLIENT_SECRET}
ZOTERO_REDIRECT_URI=http://localhost:3000/auth/zotero/callback
ZOTERO_API_BASE_URL=https://api.zotero.org
ZOTERO_API_VERSION=3
ZOTERO_API_TIMEOUT=30
ZOTERO_RATE_LIMIT_REQUESTS_PER_SECOND=20
ZOTERO_RATE_LIMIT_BURST=50
ZOTERO_WEBHOOK_SECRET=dev_webhook_secret

# Security Configuration
ZOTERO_ENCRYPTION_KEY=dev_encryption_key_32_characters_long
SECRET_KEY=dev_secret_key
JWT_SECRET=dev_jwt_secret
JWT_EXPIRATION=3600
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# File Storage Configuration
ZOTERO_ATTACHMENT_PATH=./backend/zotero_attachments
ZOTERO_MAX_FILE_SIZE=52428800
ZOTERO_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.html,.epub
ZOTERO_STORAGE_CLEANUP_INTERVAL=86400
ZOTERO_COMPRESSION_ENABLED=false

# AI Services Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=${DEV_OPENAI_API_KEY}
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3
AI_ANALYSIS_BATCH_SIZE=10
AI_SIMILARITY_THRESHOLD=0.7

# Monitoring and Logging
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
PROMETHEUS_METRICS_ENABLED=false
PROMETHEUS_METRICS_PORT=9090
LOG_FORMAT=text
LOG_FILE_PATH=./backend/logs/dev_zotero.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=2

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false
FROM_EMAIL=dev@localhost

# Webhook and Notification Configuration
SLACK_WEBHOOK_URL=
PAGERDUTY_INTEGRATION_KEY=
WEBHOOK_TIMEOUT=30
NOTIFICATION_RETRY_ATTEMPTS=1

# Performance Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=1
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600
CELERY_WORKER_MAX_TASKS_PER_CHILD=100

# Sync Configuration
ZOTERO_SYNC_BATCH_SIZE=10
ZOTERO_MAX_CONCURRENT_SYNCS=1
ZOTERO_SYNC_INTERVAL=3600
ZOTERO_FULL_SYNC_INTERVAL=86400
ZOTERO_SYNC_RETRY_ATTEMPTS=2
ZOTERO_SYNC_RETRY_DELAY=30

# Cache Configuration
CACHE_DEFAULT_TTL=300
CACHE_SEARCH_TTL=180
CACHE_LIBRARY_TTL=600
CACHE_CITATION_TTL=1800
CACHE_MAX_ENTRIES=1000

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=2000
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# SSL Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_VERIFY=false
FORCE_HTTPS=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 4 * * *"
BACKUP_RETENTION_DAYS=3
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=false

# Feature Flags
FEATURE_PDF_PROCESSING=true
FEATURE_ANNOTATION_SYNC=true
FEATURE_GROUP_LIBRARIES=true
FEATURE_COLLABORATION=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_BULK_OPERATIONS=true
FEATURE_AI_ANALYSIS=true
FEATURE_REAL_TIME_SYNC=false

# Limits and Quotas
MAX_LIBRARY_SIZE=1000
MAX_COLLECTIONS=100
MAX_TAGS_PER_ITEM=20
MAX_ATTACHMENTS_PER_ITEM=3
MAX_ANNOTATION_SIZE=1000
MAX_EXPORT_ITEMS=100
MAX_CONCURRENT_USERS=10

# Deployment Configuration
DEPLOYMENT_VERSION=dev
BUILD_DATE=${BUILD_DATE}
GIT_COMMIT=${GIT_COMMIT}
DEPLOYMENT_ENVIRONMENT=development
BLUE_GREEN_DEPLOYMENT=false
GRACEFUL_SHUTDOWN_TIMEOUT=5
HEALTH_CHECK_GRACE_PERIOD=10

# Development-specific settings
HOT_RELOAD=true
AUTO_RELOAD=true
MOCK_EXTERNAL_APIS=false
ENABLE_PROFILING=true
ENABLE_DEBUG_TOOLBAR=true